FROM python:3.11-slim

WORKDIR /app

# Instalar dependências do sistema para Xvfb e Chromium headless
RUN apt-get update && apt-get install -y \
    xvfb \
    chromium \
    chromium-driver \
    curl \
    wget \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libatspi2.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libwayland-client0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Criar diretório para screenshots
RUN mkdir -p /app/screenshots /app/logs

# Copiar requirements Python
COPY desktop-agent/requirements.txt ./desktop-agent/

# Instalar dependências Python
RUN pip install --no-cache-dir -r desktop-agent/requirements.txt

# Copiar código fonte do desktop agent
COPY desktop-agent/ ./desktop-agent/

# Script de inicialização com Xvfb
COPY scripts/start-desktop-agent.sh /start.sh
RUN chmod +x /start.sh

# Expor display virtual
ENV DISPLAY=:99

# Comando de inicialização
CMD ["/start.sh"]
