NODE_ENV=development

# JWT Secret (gerado automaticamente)
JWT_SECRET=dev_secret_key_for_docker_environment_only_not_for_production

# Database
DATABASE_URL=postgresql://automacao:automacao123@postgres:5432/automacao_dev
